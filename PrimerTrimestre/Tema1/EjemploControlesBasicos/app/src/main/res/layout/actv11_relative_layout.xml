        android:hint="Usuario" />

    <EditText
        android:id="@+id/edTxt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edTxt1"
        android:hint="Clave" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edTxt2">


