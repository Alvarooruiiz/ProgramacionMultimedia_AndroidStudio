<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">



    <TextView
        android:text="MIS PELICULAS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#F80000"
        android:layout_marginBottom="10dp" />



    <LinearLayout
        android:id="@+id/llInvisibleTend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible">
        <Button
            android:id="@+id/btnAÃ±adir"
            android:text="+"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#a8aab0"/>
        <Button
            android:id="@+id/btnCancelar1"
            android:text="Cancelar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#a8aab0"/>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/llInvisibleList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <Button
            android:id="@+id/btnQuitar"
            android:text="quitar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#a8aab0"/>
        <Button
            android:id="@+id/btnCancelar2"
            android:text="Cancelar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#a8aab0"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tendencias"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:paddingBottom="10dp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mi lista"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:paddingBottom="10dp"
            android:textColor="@color/white"
            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ListView
            android:id="@+id/listTendencias"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            />
        <ListView
            android:id="@+id/listMiLista"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"            />
    </LinearLayout>
</LinearLayout>